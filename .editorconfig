root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{neon,neon.dist}]
indent_style = tab

[docker-compose.yml]
indent_size = 4

[*.{js,ts,cjs,vue,tsx}]
indent_size = 2
